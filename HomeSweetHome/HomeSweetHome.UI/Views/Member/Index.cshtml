@model IEnumerable<MemberViewModel>

@{
    ViewData["Title"] = "Membros da Família";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<br />
<h1>@ViewData["Title"]</h1>
<br />
<a href='javascript:history.go(-1)'><i class="fa fa-arrow-left"></i> Voltar</a>
<p />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Member.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.Salary) <span>(R$)</span>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member.MemberType.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.MemberType.Type)
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
